@model Ferreteria.Domain.Entities.Product

@{
    ViewData["Title"] = "Registrar Producto";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ferretería</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>

<body style="background-color: #f8f9fa; font-family: 'Segoe UI', sans-serif;">

<div class="d-flex" style="min-height: 100vh;">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-4 d-flex flex-column justify-content-between" style="width: 250px;">
        <div>
            <h3 class="fw-bold mb-4 text-center" style="color: #ffc107;">
                <i class="bi bi-shop me-2"></i>Ferretería
            </h3>

            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Product" asp-action="Index" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                        <i class="bi bi-box-seam me-2"></i> Productos
                    </a>
                </li>
                <hr class="text-secondary" />
                <li class="nav-item mb-2">
                    <a asp-controller="Product" asp-action="Create"
                       class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                        <i class="bi bi-plus-circle me-2"></i> Nuevo Producto
                    </a>
                </li>
            </ul>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index"
               class="btn btn-outline-light w-100 rounded-pill fw-semibold">
                <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1">
        <nav class="navbar navbar-light bg-white shadow-sm px-4 py-3">
            <div class="d-flex justify-content-between w-100 align-items-center">
                <h4 class="fw-bold mb-0 text-dark">
                    <i class="bi bi-box-seam text-warning me-2"></i> Registrar Producto
                </h4>
                <a asp-controller="Product" asp-action="Index"
                   class="btn btn-outline-secondary rounded-pill">
                    <i class="bi bi-arrow-left-circle me-2"></i> Volver
                </a>
            </div>
        </nav>

        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-5">
                            <h2 class="text-center fw-bold text-secondary mb-4">
                                <i class="bi bi-hammer text-warning"></i> Crear Producto
                            </h2>
                            <hr class="mb-4" />

                            <form asp-controller="Product" asp-action="Create" method="post">
                                <div class="mb-3">
                                    <label asp-for="name" class="form-label fw-semibold">Nombre del producto</label>
                                    <input asp-for="name" class="form-control form-control-lg rounded-3 shadow-sm"
                                           placeholder="Ej: Martillo" required />
                                    <span asp-validation-for="name" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="price" class="form-label fw-semibold">Precio</label>
                                    <input asp-for="price" type="number" step="0.01"
                                           class="form-control form-control-lg rounded-3 shadow-sm"
                                           placeholder="Ej: 25000" required />
                                    <span asp-validation-for="price" class="text-danger small"></span>
                                </div>
                                

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-warning text-white btn-lg rounded-pill shadow-sm">
                                        <i class="bi bi-check-circle-fill me-2"></i> Crear Producto
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>
