@{
    ViewData["Title"] = "Dashboard";    
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - D'Ilary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">

    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-4 d-flex flex-column justify-content-between" style="width: 250px;">
            <div>
                <h3 class="fw-bold mb-4 text-center" style="color: #ff7f00;">
                    <i class="bi bi-shop me-2"></i>D'Ilary
                </h3>

                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="Equipment" asp-action="Index" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-tools me-2"></i> Equipos
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item mb-2">
                            <a asp-controller="Equipment" asp-action="Upload"
                               class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                                <i class="bi bi-cloud-upload me-2"></i> Cargar Excel
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Equipment" asp-action="Create"
                               class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                                <i class="bi bi-plus-circle me-2"></i> Nuevo Equipo
                            </a>
                        </li>
                    }
                </ul>

                <br /><br /><br />

                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="" asp-action="" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-person-circle me-2"></i> Clientes
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <a asp-controller="" asp-action=""
                           class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-person-fill-add me-2"></i> Crear Cliente
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="" asp-action=""
                           class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-person-video3 me-2"></i> Ver Clientes
                        </a>
                    </li>
                </ul>
                <br/>
                <br/>
                <br/>
                
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="" asp-action="" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-receipt me-2"></i> Ventas
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <a asp-controller="Sale" asp-action="Create"
                           class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-cart-plus me-2"></i> Crear Venta
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Sale" asp-action="Create"
                           class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-bag-check-fill me-2"></i> Imprimir Ventas
                        </a>
                    </li>
                </ul>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-light w-100 rounded-pill fw-semibold">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <nav class="navbar navbar-light bg-white shadow-sm px-4 py-3">
                <h4 class="fw-bold mb-0 text-dark">
                    <i class="bi bi-speedometer2 text-warning me-2"></i>Panel de Control
                </h4>
            </nav>

            <!-- Content -->
            <div class="p-5">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body">
                        <h5 class="fw-bold text-secondary mb-4">
                            <i class="bi bi-list-check me-2 text-warning"></i> Lista de Equipos
                        </h5>

                        @if (Model != null && Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle text-center">
                                    <thead style="background-color: #ff7f00; color: white;">
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Precio por Hora</th>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <th>Acciones</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="fw-semibold">@item.Name</td>
                                                <td>$@item.priceHour.ToString("N0")</td>

                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <td>
                                                        <form asp-controller="Equipment" asp-action="Delete" method="post"
                                                              onsubmit="return confirm('¿Estás seguro de eliminar este equipo?');">
                                                            <input type="hidden" name="id" value="@item.Id" />
                                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                                                <i class="bi bi-trash-fill"></i> Borrar
                                                            </button>
                                                        </form>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-exclamation-circle text-muted display-5"></i>
                                <p class="text-muted mt-3 mb-0">No hay equipos registrados todavía.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>