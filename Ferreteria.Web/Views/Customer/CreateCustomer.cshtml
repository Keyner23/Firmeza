@model Ferreteria.Domain.Entities.Customer

@{
    ViewData["Title"] = "Registrar Cliente";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ferretería</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body style="background-color: #f4f4f4; font-family: 'Segoe UI', sans-serif;">

<div class="d-flex" style="min-height: 100vh;">

    <!-- Sidebar -->
    <div class="bg-dark text-white p-4 d-flex flex-column justify-content-between" style="width: 250px;">
            <div>
                <h3 class="fw-bold mb-4 text-center" style="color: #ff7f00;">
                    <i class="bi bi-shop me-2"></i>D'Ilary
                </h3>

                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="Dashboard" asp-action="Index" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-tools me-2"></i> Equipos
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Product" asp-action="CreateProduct"
                               class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                                <i class="bi bi-plus-circle me-2"></i> Nuevo Equipo
                            </a>
                        </li>
                    }
                </ul>

                <br /><br /><br />

                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="Customer" asp-action="IndexCustomer" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-person-circle me-2"></i> Clientes
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <a asp-controller="Customer" asp-action="CreateCustomer"
                           class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-person-fill-add me-2"></i> Crear Cliente
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Customer" asp-action="IndexCustomer"
                           class="btn btn-warning w-100 text-white rounded-pill fw-semibold text-start">
                            <i class="bi bi-person-video3 me-2"></i> Ver Clientes
                        </a>
                    </li>
                </ul>
                <br/>
                <br/>
                <br/>
                
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a asp-controller="" asp-action="" class="nav-link active text-warning fw-semibold d-flex align-items-center">
                            <i class="bi bi-receipt me-2"></i> Ventas
                        </a>
                    </li>

                    <hr class="text-secondary" />

                    <li class="nav-item mb-2">
                        <a asp-controller="Sales" asp-action="Index"
                           class="btn btn-outline-warning w-100 rounded-pill fw-semibold text-start">
                            <i class="bi bi-cart-plus me-2"></i> Ver Ventas
                        </a>
                    </li>
                </ul>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index"
                   class="btn btn-outline-light w-100 rounded-pill fw-semibold">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                </a>
            </div>
        </div>
    <!-- Main Content -->
    <div class="flex-grow-1">
        <nav class="navbar navbar-light bg-white shadow-sm px-4 py-3">
            <h4 class="fw-bold mb-0 text-dark">
                <i class="bi bi-person-plus-fill text-warning me-2"></i>Registrar Cliente
            </h4>
        </nav>

        <!-- Formulario -->
        <div class="p-5">
            <div class="card border-0 shadow-sm rounded-4 mx-auto" style="max-width: 600px;">
                <div class="card-body">
                    <h5 class="fw-bold text-secondary mb-4 text-center">
                        <i class="bi bi-person-fill-add text-warning me-2"></i> Nuevo Cliente
                    </h5>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Nombre completo</label>
                            <input asp-for="Name" class="form-control rounded-pill" placeholder="" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Correo electrónico</label>
                            <input asp-for="Email" type="email" class="form-control rounded-pill" placeholder="" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Teléfono</label>
                            <input asp-for="Phone" class="form-control rounded-pill" placeholder="" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Document" class="form-label fw-semibold">Docuemnto</label>
                            <input asp-for="Document" class="form-control rounded-pill" placeholder="" required />
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                            <input asp-for="Password" class="form-control rounded-pill" placeholder="" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-warning text-white rounded-pill px-4 fw-semibold">
                                <i class="bi bi-check-circle me-1"></i> Guardar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>
